generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CANDIDATE
  PARTNER
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum ApplicationStatus {
  APPLIED
  SCREENING
  INTERVIEW
  OFFER
  REJECTED
  WITHDRAWN
}

enum EmailProvider {
  GMAIL
  OUTLOOK
}

enum EmailSyncStatus {
  ACTIVE
  PAUSED
  ERROR
}

enum NotificationType {
  APP_STATUS
  PARTNER
  ACCOUNT
  SYSTEM
}

model User {
  id           String          @id @default(cuid())
  name         String?
  email        String?         @unique
  image        String?
  emailVerified DateTime?
  role         UserRole        @default(CANDIDATE)
  status       UserStatus      @default(ACTIVE)
  profileScore Int             @default(0)
  preferences  Json?
  resumes      Resume[]
  applications Application[]
  partnerCompany PartnerCompany?
  emailSyncs   EmailSync[]
  emailEvents  EmailEvent[]
  accounts     Account[]
  sessions     Session[]
  notifications Notification[]
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Resume {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  label     String
  fileUrl   String
  applications Application[]
  createdAt DateTime @default(now())
}

model Company {
  id        String   @id @default(cuid())
  name      String   @unique
  logoUrl   String?
  isPartner Boolean  @default(false)
  jobs      Job[]
  createdAt DateTime @default(now())
}

model PartnerCompany {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  name      String
  website   String?
  verified  Boolean  @default(false)
  jobs      Job[]
  createdAt DateTime @default(now())
}

model Job {
  id            String   @id @default(cuid())
  title         String
  description   String?
  url           String?
  source        String?
  company       Company? @relation(fields: [companyId], references: [id])
  companyId     String?
  partner       PartnerCompany? @relation(fields: [partnerCompanyId], references: [id])
  partnerCompanyId String?
  isVerified    Boolean  @default(false)
  applications  Application[]
  createdAt     DateTime @default(now())
}

model Application {
  id             String            @id @default(cuid())
  user           User              @relation(fields: [userId], references: [id])
  userId         String
  job            Job               @relation(fields: [jobId], references: [id])
  jobId          String
  resume         Resume?           @relation(fields: [resumeId], references: [id])
  resumeId       String?
  status         ApplicationStatus @default(APPLIED)
  lastActivityAt DateTime          @default(now())
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  @@unique([userId, jobId])
}

model EmailSync {
  id           String          @id @default(cuid())
  user         User            @relation(fields: [userId], references: [id])
  userId       String
  provider     EmailProvider
  status       EmailSyncStatus @default(ACTIVE)
  lastSyncedAt DateTime?
  createdAt    DateTime        @default(now())

  @@unique([userId, provider])
}

model EmailEvent {
  id              String          @id @default(cuid())
  user            User            @relation(fields: [userId], references: [id])
  userId          String
  provider        EmailProvider
  subject         String
  fromAddress     String?
  snippet         String?
  detectedStatus  ApplicationStatus?
  detectedCompany String?
  detectedRole    String?
  sourceMessageId String?
  occurredAt      DateTime        @default(now())
  createdAt       DateTime        @default(now())

  @@unique([userId, provider, sourceMessageId])
}

model Notification {
  id        String           @id @default(cuid())
  user      User             @relation(fields: [userId], references: [id])
  userId    String
  type      NotificationType @default(SYSTEM)
  title     String
  body      String?
  href      String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId, read, createdAt])
}
